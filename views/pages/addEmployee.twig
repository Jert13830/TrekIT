{% extends "/layouts/base.twig" %}

{% block style %}
  <link rel="stylesheet" href="/assets/css/addEmployee.css">
{% endblock %}

{% block main %}
<main>
  <section>
   
    <div>
      <form id="employeeForm" action="/addEmployee" method="post">
       
       <div>
            <img id="trekitLogo" src="/assets/images/trekitWithoutText.png" alt="TrekIT logo">
       </div>
       
       <div id="formTitle">
            <h2>{{ title }}</h2>
        </div>
        <div class="employeeFormInput">
          <label for="firstName">Prénom</label>
          <input type="text" name="firstName" id="firstName" value="{{ firstName | default('') }}" required>
          {% if error.firstName %}
            <p class="error">{{ error.firstName }}</p>
          {% endif %}
        </div>
         <div class="employeeFormInput">
          <label for="lastName">Nom</label>
          <input type="text" name="lastName" id="lastName" value="{{ lastName | default('') }}" required>
          {% if error.lastName %}
            <p class="error">{{ error.lastName }}</p>
          {% endif %}
        </div>
        <div>
          <label for="dob">Date de Naissance</label>
          <input type="date" name="dob" id="dob">
        </div>
        <div>
          <label for="gender">Genre</label>
          <select name="gender" id="gender">
            <option value="homme">Homme</option>
            <option value="femme">Femme</option>
            <option value="autre">Autre</option>
          </select>
        </div>
        <div class="employeeFormInput">
					<label for="email">Email</label>
					<input type="email" id="email" name="email">
					{% if errors.email %}
						<p>{{errors.email}}</p>
					{% endif %}
					{% if duplicateEmail %}
						<p>{{duplicateEmail}}</p>
					{% endif %}

				</div>
        <div class="employeeFormInput">
          <label for="password">Votre mot de passe</label>
          <input
            type="password"
            name="password"
            id="password"
            required
            pattern="^(?=.*?[0-9])(?=.*?[A-Za-z]).{6,}$"
            placeholder="6+ caractères, 1 lettre, 1 chiffre"
            autocomplete="current-password"
          >
        </div>
        <div class="employeeFormInput">
          <label for="confirmPassword">Confirmez votre mot de passe</label>
          <input type="password" name="confirmPassword" id="confirmPassword" value="{{ confirmPassword | default('') }}" required>
          {% if error.confirmPassword %}
            <p class="error">{{ error.confirmPassword }}</p>
          {% endif %}
        </div>
        <div>
          <button type="submit" id="addEmployeeSubmit" name="addEmployeeSubmit">Register</button>
        </div>
      </form>
    </div>
  </section>
</main>
{% endblock %}