{% extends "/layouts/base.twig" %}

{% block style %}
  <link rel="stylesheet" href="/assets/css/login.css">
{% endblock %}

{% block main %}
<main>
  <section>
   
    <div>
      <form id="loginForm" action="/employeeLogin" method="post">
       
       <div id="logos">
        <div>
            <img id="trekitLogo" src="/assets/images/trekitWithText.png" alt="TrekIT logo">
        </div>
        <div>
           <a href="/login"><img id="logoUser" src="/assets/images/company.png" alt="Company logo"></a>
        </div>
       </div>
       
       <div id="formTitle">
            <h2>{{ title }}</h2>
        </div>
        <div class="loginFormInput">
         <label for="email">Email</label>
					<input type="email" id="email" name="email" required>
					{% if error.email %}
						<p>{{error.email}}</p>
					{% endif %}
        </div>
        <div class="loginFormInput">
          <label for="password">Mot de passe</label>
          <input
            type="password"
            name="password"
            id="password"
            required
            pattern="^(?=.*?[0-9])(?=.*?[A-Za-z]).{6,}$"
            placeholder="6+ caractÃ¨res, 1 lettre, 1 chiffre"
            autocomplete="current-password"
          >
          {% if error.password %}
        <p class="error">{{ error.password }}</p>
      {% endif %}
        </div>
        <div>
          <button type="submit" id="loginSubmit" name="loginSubmit">Connectez-vous</button>
        </div>
      </form>
    </div>
  </section>
</main>
{% endblock %}