{% extends "/layouts/base.twig" %}

{% block style %}
  <link rel="stylesheet" href="/assets/css/companySubscribe.css">
{% endblock %}

{% block main %}
<main>
  <section>
   
    <div>
       
       <div>
            <h2>{{ title }} - {{company.companyName}}</h2>
        </div>
        <div>
          
          {% for employee in company.employees %}
            <article>
              <h3>Prenom :
                {{employee.firstName}}</h3>
              <p>Nom :
                {{employee.lastName}}</p>
              <a href="/updatebook/{{employee.id}}">Modifier</a>
              <a href="/removebook/{{employee.id}}">Supprimer</a>
            </article>
          {% endfor %}
        </div>
    </div>
  </section>
</main>
{% endblock %}